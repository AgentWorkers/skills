{
  "agent_id": "socialbot",
  "name": "SocialBot",
  "version": "1.0.0",
  "description": "Social media automation for Twitter/X and Moltbook",
  "enabled": true,
  "triggers": {
    "keywords": [
      "tweet",
      "post",
      "social",
      "twitter",
      "moltbook",
      "socialbot",
      "schedule post",
      "thread",
      "announcement",
      "share token",
      "promote",
      "marketing post"
    ],
    "commands": ["/tweet", "/post", "/thread", "/schedule", "/social"],
    "regex_patterns": [
      "tweet.*about",
      "post.*to.*twitter",
      "create.*thread",
      "schedule.*post"
    ]
  },
  "pricing": {
    "payment_wallet": "0x4A9583c6B09154bD88dEE64F5249df0C5EC99Cf9",
    "accepted_tokens": ["ETH"],
    "plans": {
      "trial": {
        "duration_days": 2,
        "price_eth": 0.010,
        "display": "SocialBot: 0.010 ETH (2-day) | 5 ETH (lifetime)",
        "features": ["basic_posting", "single_platform", "manual_content"]
      },
      "lifetime": {
        "duration_days": -1,
        "price_eth": 5.0,
        "display": "SocialBot: 0.010 ETH (2-day) | 5 ETH (lifetime)",
        "features": ["all_platforms", "ai_content", "scheduling", "analytics", "threads", "media_upload"]
      }
    }
  },
  "platforms": {
    "twitter": {
      "enabled": true,
      "api_key_env": "TWITTER_API_KEY",
      "api_secret_env": "TWITTER_API_SECRET",
      "access_token_env": "TWITTER_ACCESS_TOKEN",
      "access_secret_env": "TWITTER_ACCESS_SECRET",
      "max_tweet_length": 280,
      "max_thread_tweets": 25,
      "rate_limit_per_hour": 50
    },
    "moltbook": {
      "enabled": true,
      "api_key_env": "MOLTBOOK_API_KEY",
      "max_post_length": 5000,
      "rate_limit_per_hour": 30
    }
  },
  "content_generation": {
    "enabled": true,
    "model": "gpt-4",
    "templates": {
      "launch": "ðŸš€ Just launched ${symbol} on ${chain}! Contract: ${address}\n\n${description}\n\n#crypto #${chain} #newlaunch",
      "update": "ðŸ“Š ${symbol} Update:\nâ€¢ Price: $${price}\nâ€¢ 24h Change: ${change}%\nâ€¢ Volume: $${volume}\n\n#crypto #${symbol}",
      "thread_intro": "ðŸ§µ Thread: ${title}\n\nLet me explain...",
      "pnl_share": "ðŸ“ˆ Today's PnL: ${pnl_amount} (${pnl_percent}%)\n\nTrades:\n${trades}\n\n#crypto #trading"
    }
  },
  "scheduling": {
    "enabled": true,
    "max_scheduled_posts": 100,
    "min_interval_minutes": 15,
    "optimal_times_utc": ["14:00", "18:00", "22:00"]
  },
  "automation": {
    "auto_hashtags": true,
    "auto_mentions": false,
    "content_review": true,
    "duplicate_check": true
  },
  "limits": {
    "max_posts_per_day": 50,
    "max_threads_per_day": 10,
    "max_media_size_mb": 5
  }
}
